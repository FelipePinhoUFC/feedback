@keyframes stretchdelay {
  0%, 40%, 100% { 
    transform: scaleY(0.4);
  } 20% {
    transform: scaleY(1.0);
  }
}

ad(time)
  animation-delay: time;

body
  background-color: #FFEB3B;
  line-height: initial;
  font-family: Roboto;

#app

  &__spinner
    margin: auto;
    width: 200px;
    font-family: Roboto;

    &:before
      content: "\263A";
      font-size: 200px;

    > div
      background-color: #333;
      height: 50px;
      width: 30px;
      display: inline-block;
      animation: stretchdelay 1.2s infinite ease-in-out;
      margin: 5px;

    .rect2
      ad(-1.1s)
    .rect3
      ad(-1.0s)
    .rect4
      ad(-0.9s)
    .rect5
      ad(-0.8s)